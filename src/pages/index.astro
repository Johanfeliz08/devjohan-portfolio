---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.jsx";
import Welcome from "../components/Welcome.astro";
import AboutMe from "../components/AboutMe.astro";
import Projects from "../components/Projects.astro";
import Skills from "../components/Skills.astro";
import Footer from "../components/Footer.astro";
import DownArrow from "../assets/icons/DownArrow.astro";
import Contact from "../components/Contact.jsx";
---

<Layout title="devjohan">
  <header class="w-full h-[100vh] flex flex-col justify-center items-center">
    <Header client:load />
    <Welcome />
    <a href="#projects">
      <DownArrow class="downarrow fill-accent size-12" />
    </a>
  </header>
  <main
    class="main flex flex-col justify-center items-center w-full max-w-screen-xl gap-y-32 py-20"
  >
    <Projects />
    <AboutMe />
    <Skills />
    <Contact client:load />
  </main>

  <Footer/>
</Layout>

<style>
  header {
    background: radial-gradient(100% 100% at 50% 0%, #1c1e1f 0%, #000 100%);
  }

  .downarrow {
    animation: 2s bounce infinite;
  }

  @keyframes bounce {
    from {
      translate: 0px 0px;
    }
    50% {
      translate: 0px -20px;
    }
    to {
      translate: 0px 0px;
    }
  }
</style>
