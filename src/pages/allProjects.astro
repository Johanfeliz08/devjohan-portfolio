---

// Components
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.jsx";
import Footer from "../components/Footer.astro";
import ProjectCard from "../components/utils/ProjectCard.astro";

// Projects's data from a JSON
import ProjectsData from "../components/utils/Projects.json";

// Icons
import Layers from "../assets/icons/Layers.astro";
import RightArrow from "../assets/icons/RightArrow.astro";

const allProjects = ProjectsData;

---

<Layout title="devjohan | Projects">
  <header class=" max-w-screen-lg flex flex-col justify-center items-center">
    <Header client:load />
  </header>
  <main
    class="main flex flex-col justify-center items-center w-full max-w-screen-lg gap-y-32 py-20"
  >
    
  <section
  id="projects"
  class="projects max-w-screen-lg h-full flex flex-col justify-center py-10 gap-8"
>
  <div class="header flex flex-row justify-start items-center max-w-screen-lg">
    <Layers class="size-14 fill-white" />
    <h1 class="section-header text-4xl text-white px-7">ALL MY PROJECTS</h1>
  </div>


  <div class="projects-main flex flex-col justify-center items-center gap-12">
    {
      allProjects.map((data ) => (
        <ProjectCard
          id={data.id}
          img={data.img}
          title={data.title}
          description={data.description}
          technologies={data.technologies}
          view={data.view}
          code={data.code}
        />
      ))

    }
  </div>

  <footer class="flex justify-center items-center">
    <a
      href="/"
      class="go-back flex justify-center items-center w-44 py-2 opacity-80 border-b-2 border-solid border-white"
    >
      <span class="text-sm">GO BACK</span>
      <RightArrow class="arrow-icon size-5 stroke-white" />
    </a>
  </footer>
</section>


  </main>

  <Footer/>
</Layout>


<style>

.go-back {
    color: #ffffff;
    border-color: #ffffff;
    transition: ease 0.5s;
  }

  .go-back:hover {
    color: var(--accent);
    border-color: var(--accent);
    transition: ease 0.5s;
  }

  .go-back:hover .arrow-icon {
    stroke: var(--accent);
    translate: 10px 0px;
    transition: ease 0.5s;
  }

  .go-back .arrow-icon {
    translate: 0px 0px;
    transition: ease 0.5s;
  }

</style>