---
// Projects's data from a JSON
import ProjectsData from "../components/utils/Projects.json";

// ProjectCard component
import ProjectCard from "./utils/ProjectCard.astro";

// Icons
import Layers from "../assets/icons/Layers.astro";
import RightArrow from "../assets/icons/RightArrow.astro";

const projects = ProjectsData.filter((data) => data.id <= 3 );

---

<section
  id="projects"
  class="projects w-[800px] max-w-[800px] h-full flex flex-col justify-center py-10 gap-8"
>
  <header class="flex flex-row justify-start items-center">
    <Layers class="size-14 fill-white" />
    <h1 class="section-header text-4xl text-white px-7">LATEST PROJECTS</h1>
  </header>


  <div class="projects-main flex flex-col justify-center items-center gap-12">
    {

      projects.map((data ) => (
        <ProjectCard
          id={data.id}
          img={data.img}
          title={data.title}
          description={data.description}
          technologies={data.technologies}
          view={data.view}
          code={data.code}
        />
      ))

    }
  </div>

  <footer class="flex justify-center items-center">
    <a
      href="/allProjects"
      class="see-more flex justify-center items-center w-44 py-2 opacity-80 border-b-2 border-solid border-white"
    >
      <span class="text-sm">SEE MORE</span>
      <RightArrow class="arrow-icon size-5 stroke-white" />
    </a>
  </footer>
</section>

<style>
  .card {
    background: #101112;
    box-shadow: 0px 4px 100px 0px #000;
  }

  h1,
  h2 {
    font-family: Cera CY Bold;
  }

  .see-more {
    color: #ffffff;
    border-color: #ffffff;
    transition: ease 0.5s;
  }

  .see-more:hover {
    color: var(--accent);
    border-color: var(--accent);
    transition: ease 0.5s;
  }

  .see-more:hover .arrow-icon {
    stroke: var(--accent);
    translate: 10px 0px;
    transition: ease 0.5s;
  }

  .see-more .arrow-icon {
    translate: 0px 0px;
    transition: ease 0.5s;
  }
</style>
