---
import SendIcon from "../assets/icons/SendIcon.astro";
---

<section
  id="contact"
  class="Contact-section w-full h-full flex flex-row gap-10 justify-between items-center"
>
  <div
    class="contact-info w-1/2 flex flex-col justify-center items-center gap-5"
  >
    <div class="flex flex-col justify-center items-center gap-2">
      <h2 class="text-4xl text-accent">CONTACT</h2>
      <p class="max-w-sm opacity-70">
        Lorem ipsum dolor sit amet consectetur, adipisicing elit. Voluptatem
        ipsam sint labore consequatur. Magnam repellendus quam suscipit,
        quibusdam iure dolorum fuga delectus temporibus aliquam reprehenderit,
        doloribus voluptatum expedita praesentium aut.
      </p>
    </div>

    <div class="email flex flex-col justify-center items-center gap-1">
      <h3 class="text-xl text-white opacity-90">Email</h3>
      <p class="text-white text-lg opacity-70">dev.johanefelizu@gmail.com</p>
    </div>
  </div>

  <div
    class="contact-form w-1/2 flex flex-col gap-5 justify-center items-center px-20 py-10 "
  >
    <header class="flex flex-col justify-center items-center">
      <h2 class="text-4xl text-accent">CONTACT FORM</h2>
      <p class="text-xl opacity-70">
        Let's get in touch and create awesome websites.
      </p>
    </header>

    <form action="" class="flex flex-col gap-4 w-full">
      <div class="input-group flex flex-col py-3">
        <input id="name" type="text" placeholder="Name" class="input" />
        <label for="name" class="label">Name</label>
      </div>

      <div class="input-group flex flex-col py-3">
        <input id="lastname" type="text" placeholder="Last name" class="input" />
        <label for="lastname" class="label">Last name</label>
      </div>

      <div class="input-group flex flex-col py-3">
        <input id="email" type="text" placeholder="E-mail" class="input" />
        <label for="email" class="label">E-mail</label>
      </div>

      <div class="input-group flex flex-col pt-5">
        <textarea
        name="message"
        id="message"
        placeholder="Message"
        class="textarea min-h-[200px] max-h-[300px]"></textarea>
        <label for="message" class="textarealabel text-[#9da4b0]">Message</label>
      </div>
      <div class="flex justify-center items-center pt-5">
        <button
          type="submit"
          class="main-link flex flex-row justify-center items-center hvr-bounce-to-right px-5 py-3 max-w-52 gap-2"
        >
          <SendIcon class="size-5" />
          <span class="text-xl pb-1">Send message</span>
        </button>
      </div>
    </form>
  </div>
</section>

<style>
  .contact-form {
    background: #101112;
    box-shadow: 0px 4px 100px 0px #000;
  }

  h2,
  h3 {
    font-family: Cera CY Bold;
  }

  .input {
    background: none;
    border-bottom: solid white 1px;
    padding: 12px 0px;
  }

  .input::placeholder {
    font-size: 18px;
    transition: linear 0.2s;
  }

  .input:focus {
    outline: none;
    border-color: var(--accent);
    transition: linear 0.2s;
  }

  .label {
    font-size: 18px;
    position: absolute;
    translate: 0px -15px;
  }

  .input:placeholder-shown ~ .label {
    visibility: hidden;
    color: var(--accent);
    translate: 0px 9px;
  }

  .input:focus ~ .label {
    visibility: visible;
    color: var(--accent);
    translate: 0px -15px;
    transition: linear 0.2s;
  }
  
  .input:focus::placeholder  {
    visibility: hidden;
    translate: 0px -15px;
    transition:0ms;
  }

  textarea {
    background: none;
    border: solid white 1px;
    outline: none;
    font-size: 18px;
    padding: 12px 2px;
  }

  .textarea::placeholder {
    font-size: 18px;
    transition: linear 0.2s;
  }

  .textarea:focus {
    outline: none;
    border-color: var(--accent);
    transition: linear 0.2s;
  }

  .textarealabel {
    font-size: 18px;
    position: absolute;
    translate: 0px -28px;
  }

  .textarea:placeholder-shown ~ .textarealabel {
    visibility: hidden;
    color: var(--accent);
    translate: 0px 9px;
  }

  .textarea:focus ~ .textarealabel {
    visibility: visible;
    color: var(--accent);
    translate: 0px -28px;
    transition: linear 0.2s;
  }
  
  .textarea:focus::placeholder  {
    visibility: hidden;
    translate: 0px -15px;
    transition:0ms;
  }

  .main-link {
    color: black;
    fill: black;
    background-color: var(--accent);
    filter: drop-shadow(0px 4px 20px #000);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hvr-bounce-to-right {
    -webkit-transform: perspective(1px) translateZ(0);
    transform: perspective(1px) translateZ(0);
    box-shadow: 0 0 1px rgba(0, 0, 0, 0);
    position: relative;
    -webkit-transition-property: color;
    transition-property: color;
    -webkit-transition-duration: 0.5s;
    transition-duration: 0.5s;
  }

  .hvr-bounce-to-right:before {
    content: "";
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--accent-2);
    -webkit-transform: scaleX(0);
    transform: scaleX(0);
    -webkit-transform-origin: 0 50%;
    transform-origin: 0 50%;
    -webkit-transition-property: transform;
    transition-property: transform;
    -webkit-transition-duration: 0.5s;
    transition-duration: 0.5s;
    -webkit-transition-timing-function: ease-out;
    transition-timing-function: ease-out;
  }
  .hvr-bounce-to-right:hover,
  .hvr-bounce-to-right:focus,
  .hvr-bounce-to-right:active {
    color: var(--accent);
    fill: var(--accent);
  }
  .hvr-bounce-to-right:hover:before,
  .hvr-bounce-to-right:focus:before,
  .hvr-bounce-to-right:active:before {
    -webkit-transform: scaleX(1);
    transform: scaleX(1);
    -webkit-transition-timing-function: cubic-bezier(0.52, 1.64, 0.37, 0.66);
    transition-timing-function: cubic-bezier(0.52, 1.64, 0.37, 0.66);
  }
</style>
