<style is:global>

  @import url('https://db.onlinewebfonts.com/c/a1ab9bebae84d82fbcfe930c4643de7a?family=Cera+CY+Regular');
  @import url('https://db.onlinewebfonts.com/c/6a28a1fb5b77054a12626d0c23c92aa2?family=Cera+CY+Bold');
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;700&display=swap');
  @import url("https://cdn-uicons.flaticon.com/2.1.0/uicons-brands/css/uicons-brands.css");

  :root {
    --accent: #ba2222;
    --accent-2: #1c1e1f;
  }

  html {
    font-family: "Cera CY Regular", "Poppins", sans-serif;
    color: white;
    overflow-y: scroll;
    scroll-behavior: smooth;
  }

  body {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: radial-gradient(
      217.5% 217.48% at 50% 0%,
      #1c1e1f 0%,
      #000 100%
    );
  }

  h1 {
    font-family: "Cera CY Bold", "Poppins", sans-serif;
    font-weight: bold;
  }

  p {
    font-family: "Poppins";
    font-weight: 300;
  }

  a {
    font-family: "Cera CY Regular", "Poppins", sans-serif;
    font-size: 20px;
  }

  section {
    scroll-margin-top:70px;
  }

</style>
